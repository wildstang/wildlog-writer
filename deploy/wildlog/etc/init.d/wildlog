PIDFILE=/var/run/wildlog.pid
WILDLOGD="/opt/jdk1.8.0_33/bin/java -jar /opt/wildlog/logwriter.jar"
start() {
        echo -n "Starting wildlog "
	$WILDLOGD &
	echo $! > $PIDFILE

}

stop() {
        echo -n "Shutting down : "
	if [ -f $PIDFILE ]; then
		pkill -F $PIDFILE
	else
		pkill java
	fi
	rm -f $PIDFILE
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage:  {start|stop|restart}"
        exit 1
        ;;
esac
exit $?

